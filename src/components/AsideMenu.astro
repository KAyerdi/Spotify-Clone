---
import LibraryIcon from "@/icons/Library.astro"
import HomeIcon from "@/icons/Home.astro"
import SearchIcon from "@/icons/Search.astro"
import UploadIcon from "@/icons/Upload.astro"
import AddMusic from "@/icons/AddMusic.astro"
import SideMenuItem from "./SideMenuItem.astro"
import SideMenuCard from "./SideMenuCard.astro"
import { playlists } from "@/lib/data"
---

<nav class="flex flex-col flex-1 gap-2">
  <div class="bg-zinc-900 rounded-lg p-2">
    <ul>
      <SideMenuItem href="/">
        <HomeIcon />
         Inicio
      </SideMenuItem>

      <SideMenuItem href="/#">
        <SearchIcon />
         Buscar
      </SideMenuItem>
    </ul>
  </div>

  <div class="bg-zinc-900 rounded-lg p-2 flex-1">
    <ul>
      <SideMenuItem href="/#">
        <LibraryIcon />
         Tu biblioteca
      </SideMenuItem>

      <li>
        <button
          id="uploadButton"
          class="flex gap-4 text-zinc-400 hover:text-zinc-100 items-center py-3 px-5 font-medium transition duration-300 w-full"
        >
          <UploadIcon />
          Subir MÃºsica
        </button>
      </li>

      <li>
        <button
          class="flex gap-4 text-zinc-400 hover:text-zinc-100 items-center py-3 px-5 font-medium transition duration-300 w-full"
        >
          <AddMusic />
          Crear Playlist
        </button>
      </li>
    </ul>

    {playlists.map((playlist) => <SideMenuCard playlist={playlist} />)}
  </div>
</nav>

<script>
  import { useUploadStore } from '../store/UploadStore'
  
  const uploadButton = document.getElementById('uploadButton')
  uploadButton?.addEventListener('click', () => {
    const { openUploadModal } = useUploadStore.getState()
    openUploadModal()
  })
</script>