---
interface Props {
  href?: string
  isUploadButton?: boolean
}

const { href, isUploadButton } = Astro.props
---

<li>
  {
    isUploadButton ? (
      <button
        class="flex gap-4 text-zinc-400 hover:text-zinc-100 items-center py-3 px-5 font-medium transition duration-300"
      >
        <slot />
      </button>
    ) : (
      <a
        href={href}
        class="flex gap-4 text-zinc-400 hover:text-zinc-100 items-center py-3 px-5 font-medium transition duration-300"
      >
        <slot />
      </a>
    )
  }
</li>
